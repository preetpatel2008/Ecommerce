@inject NavigationManager Navigation
@rendermode InteractiveServer

<div class="top-row px-4">
    <button class="dropdown-item" @onclick="Logout" title="Logout"> <i class="bi bi-box-arrow-left tex" style="margin-right:10px"></i>Logout</button>
</div>

@code {
    private void Logout()
    {
        Console.WriteLine("Logout button clicked");
        Navigation.NavigateTo("/auth/logout", forceLoad: true);
    }
}         